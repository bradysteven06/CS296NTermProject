<h4>Add New Image</h4>
<hr />

<form method="post" enctype="multipart/form-data">
    <input type="file" name="files" required />
    <input type="text" autocomplete="off" placeholder="Enter File Description" name="description" required />
    <button type="submit" class="btn btn-primary" asp-controller="Images" asp-action="UploadImage">Add Image</button>
    <a asp-controller="Images" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>